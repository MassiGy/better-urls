<html>
  <head>
    <title>Verti by HTML5 UP</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, user-scalable=no"
    />
    <link rel="stylesheet" href="/assets/css/main.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://accounts.google.com/gsi/client" async defer></script>
  </head>

 

  <body class="is-preload homepage">

    <div id="page-wrapper">

      <% if(flash_messages && flash_messages.failure){ %>

        <div class="alert alert-warning" style="text-align:center" role="alert">
          <%= flash_messages.failure %>
        </div>
      
        <% } %>

      <!-- Header -->
      <div id="header-wrapper">
        <header id="header" class="container">
          <!-- Logo -->
          <div id="logo" style="margin-top: -14px;">
            <h1><a href="/">Better Urls</a></h1>
            <span> by Massiles Ghernaout </span>
          </div>

          <!-- Nav -->
          <nav id="nav">
            <ul>
              <li>
                <a href="https://www.linkedin.com/in/massigy/">Linkedin</a>
              </li>
              <li><a href="https://github.com/MassiGy">Github</a></li>

              <li style="margin-top: 10px">
                <button
                  id="g_id_onload"
                  data-client_id="238409132212-ivjragegp9o4ri8id7clgk3te9q5sk76.apps.googleusercontent.com"
                  data-context="signin"
                  data-ux_mode="popup"
                  data-login_uri="http://localhost:3000/login"
                  data-auto_select="true"
                  data-itp_support="true"
                  data-auto_prompt="false"
                  style="padding: 0"
                ></button>
                <button
                  class="g_id_signin"
                  data-type="standard"
                  data-shape="rectangular"
                  data-theme="outline"
                  data-text="signin_with"
                  data-size="large"
                  data-logo_alignment="left"
                  style="padding: 0"
                ></button>
              </li>
            </ul>
          </nav>
        </header>
      </div>

      <!-- Banner -->
      <div id="banner-wrapper">
        <div id="banner" class="box container">
          <p>Create Your Own Simplefied Urls</p>
          <div class="row">
            <div class="col-7 col-12-medium">
              <br />

              <form action="/createUrl" method="POST" class="my-5">
                <div class="row">
                  <div class="col-3 col-5-medium">
                    <h3 style="margin-top: 0.4rem">Old url :</h3>
                  </div>
                  <div class="col-9 col-7-medium">
                    <input
                      class="form-control mt-2 mb-5"
                      name="old_url"
                      type="text"
                      placeholder="https://example.com/usr/dfsj?book=1"
                      required
                    />
                  </div>
                </div>
                <br />
                <div class="row">
                  <div class="col-3 col-5-medium">
                    <h3 style="margin-top: 0.4rem">New url :</h3>
                  </div>
                  <div class="col-9 col-7-medium">
                    <input
                      class="form-control mt-2 mb-5"
                      name="new_url"
                      type="text"
                      value="localhost:3000/"
                      required
                    />
                  </div>
                </div>
                <br />
                <input
                  class="button margin fa-arrow-circle-right"
                  type="submit"
                  value="Create"
                />
              </form>
            </div>
            <div class="col-5 col-12-medium">
              <ul>
                <li>
                  <a
                    href="/download"
                    style="margin-top: 10px"
                    class="button alt large icon fa-file-alt"
                    >Download Urls</a
                  >
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>

  <!-- Scripts -->
  <script src="/assets/js/jquery.min.js"></script>
  <script src="/assets/js/jquery.dropotron.min.js"></script>
  <script src="/assets/js/browser.min.js"></script>
  <script src="/assets/js/breakpoints.min.js"></script>
  <script src="/assets/js/util.js"></script>
  <script src="/assets/js/main.js"></script>
 </html>
